---
interface Props {
  id: string;
  details: null | string;
  img: string;
  success: boolean;
  flightNumber: number;
}

const { id, details, img, success, flightNumber } = Astro.props;
const launchStatus = success ? "Success" : "Failure";
---

<a
  href={id}
  class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-grady-700 hover:border-gray-500 transition flex flex-col"
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={img} alt={`Patch for launch ${id}`} />
  </picture>

  <header class="p-4 flex-grow">
    <span
      class:list={[
        "text-xs font-semibold text-white mr-2 px-2.5 py-0.5 rounded",
        {
          "bg-green-400 text-green-800": success,
          "bg-red-400 text-red-800": !success,
        },
      ]}
    >
      {launchStatus}</span
    >
  </header>

  <h2 class="my-2 ml-2 text-2xl font-bold tracking-tight text-white">
    Flight #{flightNumber}
  </h2>

  <p class="mb-4 ml-2 font-light text-gray-400">
    {
      details !== null && details?.length > 100
        ? details?.slice(0, 100) + "..."
        : details
    }
  </p>
</a>
